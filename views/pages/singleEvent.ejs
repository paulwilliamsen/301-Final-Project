<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head')%>
</head>
<body>
    <%- include('../partials/header', uID)%>
    <% let date = new Date(info.date).toISOString().substring(0, 10); %>
    <form action="/update/<%= info.id %>" method='post'>
      <input type="hidden" name="_method" value='put'>
      <input type="date" name="date" value="<%- date   %>" required/>
      <input type="time" name="start_time" value="<%- info.start_time  %>"/>

      <input type="text" name="title" placeholder="Title" value="<%- info.title  %>" required/> 
      <input type="text" name="description" placeholder="Description" value="<%- info.description  %>"/> 
      <button type="submit">Update</button>
    </form>
    <form action="/delete/<%= info.id %>" method='post'>
      <input type="hidden" name="_method" value='delete'/>
      <button type="submit">Delete</button>
    </form>

    <div class="hidden-div"></div>
    <section class="footer">
      <%- include('../partials/footercontent', {uID}) %>
    </section>
</body>
</html>