<!DOCTYPE html>
<html>
  <head>
      <%- include('../partials/head') %>
  </head>
  <body id="events-body">
    <%- include('../partials/header', user_id)%>
    
    <section class="expand-events">
        <button id="expand-event-btn">
          <section class="expand-btn-text">Add New Event</section>
          <section class="expand-btn-plus-event">+</section>
        </button>
        <section class="content-event">
    <form id="events-form" action="/events" method="post">
      <input type="date" name="date" required/>
      <input type="time" name="start_time"/>

      <input type="text" name="title" placeholder="Title" required/> 
      <input type="text" name="description" placeholder="Description"/> 
      <input type="hidden" name="user_id" value="<%- user_id  %>">
      <button type="submit">Submit</button>
    </form>
  </section>
  </section>

    <div id="events-display">
      <% if(events.length) { %>
      <%- include('../partials/events', {events, user_id}) %>
      <% }; %>
    </div>

    <div class="hidden-div"></div>
    <section class="footer">
    <%- include('../partials/footercontent', {user_id}) %>
    <%- include('../partials/footer') %>
    </section>
  </body>

</html>

